<div class="form-page">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h3 class="form-title align-center">Complétez vos informations</h3>
        <%= simple_form_for(current_user, url: profile_path, html: { method: :patch }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :street, label: 'Votre adresse personnelle', required: true, autofocus: true %>
            <%= f.input :zip_code, label: 'Code postale', required: true %>
            <%= f.input :city, label: 'Ville', required: true %>
            <%= f.input :phone_number, label: 'Numéro de téléphone', required: true %>
            <%= f.input :nationality, label: 'Nationalité', required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Enregistrer les modifications", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
