<% if notice %>
  <div class="alert alert-info alert-dismissible" id="flash" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
  <!-- This line clears the object -->
<% end %>


<% if alert %>
  <div class="alert alert-warning alert-dismissible" id="flash" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
  <!-- This line clears the object -->
<% end %>
