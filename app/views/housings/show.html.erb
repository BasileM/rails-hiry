<!-- Background image -->
<% if !@image.nil? && if !@image.photo.url.nil? %>
    <div class="fullscreen fullscreen-img" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(44,44,44,0.6) 50%), url('<%= cl_image_path @image.photo, height: 700, width: 1440, crop: :fill %>')">
  <% end %>
<% else %>
  <%= render 'shared/banner' %>
<% end %>
  <div class="fullscreen-content">
  	<h1 class="fullscreen-title"><%= @housing.street %></h1>
  </div>
</div>


<!-- Page container -->
<div class="page-content">
  <div class="container">
    <div class="row">

      <!-- Sticky sidebar navigation -->
      <div class="col-md-3 housing-show-links">
        <nav class="nav flex-column housing-nav">
          <a class="nav-link" href="#rental"><h4>Ma location</h4></a>
          <a class="nav-link" href="#housing"><h4>Ma fiche de bien</h4></a>
        </nav>
      </div>

      <!-- Begin Housing infos -->
      <div class="col-md-9">
        <div class="list-housing">
          <!-- Info on rental -->
          <div class="vacant-housings-list">
            <h2 id="vacant-housing" class="housings-list-title"><span>Ma location</span></h2>
            <div class="rental-info-cards">
              <% if @rental.present? %>
                <!-- Contract -->
                <%= link_to rental_path(@rental) do %>
                  <div class="rental-info-card">
                    <div class="rental-info-card-title">
                      Contrat de location
                    </div>
                    <div class="rental-info-card-description">
                      Visualisez votre contrat de bail en version PDF
                    </div>
                  </div>
                <% end %>
                <!-- Receipts -->
                <%= link_to rental_receipts_path(@rental) do %>
                  <div class="rental-info-card">
                    <div class="rental-info-card-title">
                      Quittances
                    </div>
                    <div class="rental-info-card-description">
                      Générez et visualisez vos quittances de loyers
                    </div>
                  </div>
                <% end %>
                <!-- Inventory -->
                <% if @housing.inventories.present? %>
                  <%= link_to rental_inventories_path(@rental) do %>
                    <div class="rental-info-card">
                      <div class="rental-info-card-title">
                        Etat des lieux
                      </div>
                      <div class="rental-info-card-description">
                        Visualisez votre état des lieux
                      </div>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to new_rental_inventory_path(@rental) do %>
                    <div class="rental-info-card">
                      <div class="rental-info-card-title">
                        Etat des lieux
                      </div>
                      <div class="rental-info-card-title-plus">
                        <i class="fa fas fa-plus plus-button"></i>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <!-- if there is no rentals -->
              <% else %>
                <%= link_to new_housing_rental_path(@housing) do %>
                  <div class="rental-info-card">
                    <div class="rental-info-card-icon">
                      <i class="fas fa-plus plus-button"></i>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <!-- Info on housing -->
          <div class="rented-housings-list">
            <h2 id="housing" class="housings-list-title">Ma fiche de bien</h2>
            <div class="housing-info">
              <%= render 'details', housing: @housing %>
            </div>
          </div>

        </div>
      </div>
      <!-- End housings list -->
    </div>
  </div>
</div>
