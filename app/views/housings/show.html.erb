<h1>
  <%= @housing.street %>
</h1>

<!-- Rubrique location -->
<h2>
  <%= "Ma location" %>
</h2>

<%= link_to "Mon contrat de location", rental_path(@rental), type: "button", class: "btn btn-primary mt-2" %>
<%= link_to "Créer une quittance", new_rental_receipt_path(@rental), type: "button", class: "btn btn-primary mt-2" %>
<hr>
<%= link_to "Ajouter une nouvelle location", new_housing_rental_path(@housing), type: "button", class: "btn btn-primary mt-2" %>

<!-- Rubrique fiche de bien -->
<h2>Ma fiche de bien</h2>
<h3>Informations générales</h3>
<%= render 'details', housing: @housing %>
<h3><%= "Pièces" %></h3>
<ul>
  <% @housing.rooms.each do |room| %>
    <li><%= room.type_of_room %> : <%= room.size %> m2</li>
  <% end %>
</ul>
<%= link_to "Ajouter une nouvelle pièce", new_housing_room_path(@housing), type: "button", class: "btn btn-primary mt-2" %>

<!-- Rubrique statistique -->
<h2>
  <%= "Mes statistiques" %>
</h2>
