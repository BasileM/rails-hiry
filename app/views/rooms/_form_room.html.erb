<%= simple_form_for [@housing, @room] do |f| %>
  <%= f.input :type_of_room, label: 'Type de pièce',
  collection: ["Salon", "Chambre", "Cuisine", "Salle de bain", "Salle à manger", "Toilettes", "Buanderie", "Bureau", "Garage", "Dressing"] %>
  <%= f.input :size, label: 'Taille de la pièce (en mètres carrés)', placeholder: '8' %>
  <%= f.submit "Ajouter cette pièce", class: "btn btn-primary mt-2" %>
<% end %>
