<%= simple_form_for [@housing, @rental] do |f| %>
  <%= f.input :furnished, label: 'Meublé ?', placeholder: 'Meublé ou non meublé', collection: ["Meublé", "Non meublé"] %>
  <%= f.input :start_date, label: 'Date de début de la location', as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, label: 'Date de fin (facultatif)', as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :monthly_rent, label:'Loyer mensuel en euros', placeholder: '1 350 €' %>
  <%= f.input :monthly_expenses, label:'Charges mensuelles en euros', placeholder: '150 €' %>
  <%= f.submit "Créer la location", class: "btn btn-primary mt-2" %>
<% end %>
